.container
  .row
    %button.btn.btn-primary
      = link_to 'New', new_post_path, class: 'button-style'
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th Reply Box
          %th
          %th
          %th

      %tbody
        - @posts.each do |post|
          %tr
            %td= post.reply
            %td
              %button.btn.btn-primary
                = link_to 'Show', post, class: 'button-style'
            %td
              %button.btn.btn-warning
                = link_to 'Edit', edit_post_path(post), class: 'button-style'
            %td
              %button.btn.btn-danger
                = link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-style'